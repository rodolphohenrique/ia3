@model ProjetoAprendiz.Models.PessoaView

@{
    ViewBag.Title = "Edit";
}

<h2>Edição de cadastro de pessoa</h2>

@using (Html.BeginForm("Edit", "Pessoa", FormMethod.Post))
{
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
            @Html.HiddenFor(model => model.Id)
        </dt>

        <dd>
            @Html.EditorFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CPFCNPJ)
        </dt>

        <dd>
            @Html.EditorFor(model => model.CPFCNPJ)
        </dd>
