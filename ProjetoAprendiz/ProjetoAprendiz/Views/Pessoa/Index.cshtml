@model List<ProjetoAprendiz.Models.PessoaView>


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


@Html.ActionLink("Cadastrar", "Create", "Pessoa", new { @class = "btn btn-success btn-sm" })

<table class="table">
    <tr>
        <td>Nome</td>
        <td>CPF/CNPJ</td>
        <td>Email</td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@item.CPFCNPJ</td>
            <td>@item.Email</td>
            <td>@Html.ActionLink(" Editar", "Edit", "Pessoa", new { idPessoa = @item.Id }, new { @class = "glyphicon glyphicon-pencil" })</td>
        </tr>        
    }    
</table>

