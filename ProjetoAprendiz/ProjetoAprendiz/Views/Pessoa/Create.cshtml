            @Html.TextBoxFor(model => model.Endereco.Pais, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Endereco.CEP, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.Endereco.CEP, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        
        
