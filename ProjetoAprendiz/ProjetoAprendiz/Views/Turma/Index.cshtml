@model List<ProjetoAprendiz.Models.TurmaView>


    @{
        ViewBag.Title = "Index";
    }

    <h2>Index</h2>


    @Html.ActionLink("Cadastrar", "Create", "Turma", new { @class = "btn btn-success btn-sm" })

    <table class="table">
        <tr>
            <td>Nome</td>
            <td>Descrição</td>
            <td>Data de criação</td>
            <td>Oficina</td>
            <td>Estado</td>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Descricao</td>
                <td>@item.DataCriacao</td>
                <td>@item.IdOficina</td>
                <td>@item.IdEstado</td>
                <td>@Html.ActionLink(" Editar", "Edit", "Turma", new { idTurma = @item.Id }, new { @class = "glyphicon glyphicon-pencil" })</td>
            </tr>
        }
    </table>

