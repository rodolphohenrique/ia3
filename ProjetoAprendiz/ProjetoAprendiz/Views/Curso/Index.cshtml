@model List<ProjetoAprendiz.Models.CursoView>

@{
    ViewBag.Title = "Cursos";
}

<h2>Pesquisa de Cursos</h2>


@using (Html.BeginForm("Index", "Curso", FormMethod.Get))
{
    <div class="form-horizontal">
        <h4>Filtros</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.Label("Nome")
                @Html.TextBox("NomeFiltro", null, new { @class = "form-control" })
            </div>
            <div class="col-md-10">
                @Html.Label("Data de criação")
                @Html.TextBox("DataCriacao", null, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Pesquisar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@Html.ActionLink("Cadastrar nova Curso", "Create", "Curso", new { @class = "btn btn-success btn-sm" })
<table class="table">
    <tr>
        <td>Nome</td>
        <td>Data de criação</td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@item.DataCriacao.ToShortDateString()</td>
            <td>@Html.ActionLink(" Editar", "Edit", "Curso", new { idCurso = @item.Id }, new { @class = "glyphicon glyphicon-pencil" })</td>
        </tr>
    }
</table>

